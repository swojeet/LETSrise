<div class="col-md-6">
  <div class="posts post_box">
    <div class="panel-heading text-center">
      
      <% @posts.each do |post| %>
      <p class="bold_black"><%= post.user.name %></p>
    </div>
        <div class="panel-body text-center">
          <%= post.description %>
          <%= link_to 'View Post', post_path(post.id),class: 'bold_black pull-right' %>
        </div>
        <div class="panel-footer text-right">
          <input type="button" class="btn btn-default help-me" value="Let's Help"/>
        </div>
<% end %>
      </div>
    </div>
    <div class="col-md-3"></div>